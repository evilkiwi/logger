{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "declaration": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "outDir": "./build/",
    "module": "es2022",
    "moduleResolution": "node",
    "target": "es2022",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "paths": {
      "*": ["./src/types/*.d.ts"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
